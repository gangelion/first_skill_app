.container
  .row
    .col-xl-3.d-none.d-xl-block
      .bg-white.my-5.mx-3.px-3.shadow{style: "height: 60vh;"}
    .col-xl-9
      .bg-light
        .h3.my-4.text-info
          = "メンターをさがす(#{@skill.skill_set})"
        .col-12  
          = "#{@skills.length}人のメンターがみつかりました。"
        - @skills.each do |skill|
          .col-12.bg-white.my-3.d-flex.shadow{style: "height: 300px;"}
            .col-2
              - if skill.plan.plan_image
                = image_tag "#{skill.plan.user.image_icon}", style: "width: 75px; height: 75px; border-radius: 50%;", class: "mt-3"
            .col-10
              .col-12.h5.text-info.my-3
                = skill.plan.user.name
              .col-12.h5{style: "height: 170px;"}
                = skill.plan.title
              .col-12
                = "#{skill.plan.price} 円／月"
            
      
