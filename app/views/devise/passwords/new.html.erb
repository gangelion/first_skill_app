<div class="container">
  <div class="row">
    <div class="col-12 bg-white my-5 shadow-sm">
      <h2 class="text-center h2 text-info mt-5">パスワードリセット</h2>
      <div class="text-center mb-3 text-muted">メールアドレスを入力してください</div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field text-center">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール", class: "bg-light rounded form-control-lg" %>
        </div>

        <div class="actions text-center mt-5">
          <%= f.submit "送信する", class: "col-6 col-md-3 btn btn-info rounded mb-5" %>
        </div>

      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

