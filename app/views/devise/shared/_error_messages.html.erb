<% if resource.errors.any? %>
  <div class="container">
    <div class="row">
      <div class="col-9 col-md-8 mx-auto">
        <div id="error_explanation">
          <div class="text-center alert alert-danger mt-5">
            <h2>
              <%= "＊＊＊エラー項目があります＊＊＊"%>
            </h2>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
